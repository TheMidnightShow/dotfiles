
;; ---------------------------------------------- ;;
;; ------------------ workspace ----------------- ;;
;; ---------------------------------------------- ;;

(defwidget workspace []
  (literal 
    :content workspace))

(defwidget cpu []
  (box
    :orientation "v"
    :halign "center"
    :class "cpu"
    cpu-icon "${round(EWW_CPU.avg, 0)}%"
  ))

;; -----------------------------------------------------------------------
;; -----------------------------------------------------------------------

(defwidget bottom []

	(eventbox	
    :onhover "${eww} update bottom=true"	
		:onhoverlost "${eww} update bottom=false" 

    (box		
      :orientation "v"					
      :space-evenly "false" 	 
      :vexpand "false" 	
      :class "bottommenu"

      (revealer	
        :transition "slideup"				
        :reveal bottom			 
        :duration "650ms"
        (box		

          :orientation "v"					
          :space-evenly "false"
          (brightness)
          (volume)
          (cpu)
          (memory)))
          (button
          :class "bottom-icon" 
          :onclick "./scripts/dashboard.sh"
          "ïƒ´ "))))

;; ---------------------------------------------- ;;
;; ----------------- top widget ----------------- ;;
;; ---------------------------------------------- ;;

(defwidget hour []
(button
  :onclick "./scripts/dashboard.sh"
  (literal :content hour)))

;; -----------------------------------------------------------------------
;; -----------------------------------------------------------------------

(defwidget battery []

  (literal :content battery))

;; -----------------------------------------------------------------------
;; -----------------------------------------------------------------------

(defwidget updates []

  (literal :content updates))

;; -----------------------------------------------------------------------
;; -----------------------------------------------------------------------



;; ---------------------------------------------- ;;
;; ----------------- main widget ---------------- ;;
;; ---------------------------------------------- ;;

(defwidget bar []

  (centerbox 
    :orientation "v"
    :class "bar"

    (box 
      :orientation "v"
      (workspace))

    (box)
    
    (box 
      :valign "end" 
      (hour))
  )
  
)
